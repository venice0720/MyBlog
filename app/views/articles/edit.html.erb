<h1>Edit an Article</h1>
<%= form_for :article,method: :put, url: article_update_path, locale: true do |f|  %>
  
    <div> 
        <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
            <% end %>
        </ul>
        <% end %>
    </div>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>

    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_field :body %>

    </div>

    <div>
    <%= f.submit %>

    </div>

<% end %>